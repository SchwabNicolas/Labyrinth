<UserControl x:Class="Maze.CellControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Maze"
             mc:Ignorable="d" 
             d:DesignHeight="128" d:DesignWidth="128">
    <Grid>
        <Rectangle x:Name="LeftBorder" Fill="Red" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="2"></Rectangle>
        <Rectangle x:Name="TopBorder" Fill="Red" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="2"></Rectangle>
        <Rectangle x:Name="RightBorder" Fill="Red" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="2"></Rectangle>
        <Rectangle x:Name="BottomBorder" Fill="Red" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="2"></Rectangle>
    </Grid>
</UserControl>
